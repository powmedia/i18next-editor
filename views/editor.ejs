<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Translator</title>

  <!-- Included CSS Files -->
  <link rel="stylesheet" href="/stylesheets/foundation.min.css" />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <!-- FontAwesome -->
  <link rel="stylesheet" href=" /stylesheets/font-awesome.css" />

  <!--[if IE 7]>
    <link rel="stylesheet" href="/stylesheets/font-awesome-ie7.css" />
  <![endif]-->

  <script src="/javascripts/modernizr.foundation.js"></script>

  <!-- IE Fix for HTML5 Tags -->
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>

  <div class="container top-bar">
    <div class="twelve columns">
      <nav class="top-bar">
        <ul>
          <!-- Title Area -->
          <li class="name">
            <h1><a href="/">Translator</a></h1>
          </li>
          <li class="toggle-topbar"><a href="#"></a></li>
        </ul>

        <section>
          <ul class="left">
            <li><a href="/">Sections</a></li>
          </ul>
          <!--<ul class="right">
            <li class="divider"></li>
            <li class="has-dropdown">
              <a href="#">Menu</a>
              <ul class="dropdown">
                <li><a href="/new">Create group</a></li>
              </ul>
            </li>
          </ul>-->
        </section>
      </nav>
    </div>
  </div>


  <div class="container twelve columns" id="wrapper">

    <div class="row">
      <div class="twelve columns">
        <h2><%= group.id %></h2>
      </div>
      <hr />
    </div>
    <div class="row">
      <div class="twelve columns">
        <dl class="tabs contained" id="view_switcher">
          <dt>View:</dt>
          <dd class="active source_tab" style="display: none"><a href="#source">Source</a></dd>
          <dd class="editor_tab" style="display: none"><a href="#editor">Editor</a></dd>
          <dd class="eight offset-by-one"><div id="message" class="alert-box secondary">Good to go</div></dd>
        </dl>
        <ul class="tabs-content contained">
          <li class="active" id="sourceTab">
            <div class="row">
              <div class="six columns">
                <button class="button tiny secondary prettify right" data-target="#source_text"><i class="icon-ok"></i> Prettify</button>
              </div>
              <div class="six columns">
                <button class="button tiny secondary prettify right" data-target="#target_text"><i class="icon-ok"></i> Prettify</button>
              </div>
            </div>
            <div class="row">
              <div class="six columns">
                <textarea id="source_text" placeholder="Source language JSON" rows="20">
<%= source %>
                </textarea>
              </div>
              <div class="six columns">
                <textarea id="target_text" placeholder="Target language JSON" rows="20">
<%= target %>
                </textarea>
              </div>
            </div>
            <div class="row">
              <div class="twelve columns">
                <button class="button right" id="json_to_editor"><i class="icon-cogs"></i> Generate input fields</button>
              </div>
            </div>
          </li>
          <li id="editorTab">
            <table class="twelve">
              <thead>
                <tr>
                  <th class="two">key</th>
                  <th class="five">source value</th>
                  <th class="five">target value</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
            <div class="row">
              <div class="twelve columns">
                <button id="editor_to_json" class="button right"><i class="icon-magic"></i> <!--Generate JSON-->Save</button>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <script src="/javascripts/foundation.min.js"></script>
  <script src="/javascripts/jquery.to_json.js"></script>
  <script src="/javascripts/app.js"></script>
</body>
</html>
